#include <${1:iostream}>$0
endsnippet

snippet def "define"
#define $1
endsnippet

snippet usns "using namespace ..."
using namespace ${1:std};$0
endsnippet

snippet coutstd "std::cout"
std::cout << "$1" << ${2:std::endl};$0
endsnippet

snippet cout "cout <<.."
cout << "$1";$0
endsnippet

snippet coutwe "cout << '' << endl;"
cout << "$1" << endl;$0
endsnippet

snippet coute "cout << endl;"
cout << endl;$0
endsnippet


snippet cin "cin >> x"
cin >> $1;$0
endsnippet

snippet main "main function"
int main(int argc, char* args[]){
	${0:Enter code here}

	return 0;
}
endsnippet

snippet cls "clear screen"
system("clear");
endsnippet

snippet fori "for (int i;)"
for(int i = $1; i ${2:< 10} ; i${3:++}){${0:Code here}}
endsnippet

snippet for "for(...)"
for(${1:int i = 0; i<=10; i++}){${0:Code here}}
endsnippet

snippet if "if standart"
if (${1:True}){${0:Code here}}
endsnippet

snippet while "while()"
while(${1:True}){${0:Code here}}
endsnippet

snippet struct "struct exsamle"
struct ${1:StructName} {
	${2:Code here}
};$0
